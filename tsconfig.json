{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "jsx": "react",
    "declaration": true,
    "strict": true
  },
  "include": ["src/"]
}
