{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "module": "esnext",
    "target": "es6",
    "lib": ["es2019", "dom"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "jsx": "react",
    "strict": true
  },
  "include": ["src/"]
}
